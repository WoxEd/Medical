<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/activity_main_backgroud">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <Button
            android:id="@+id/entryButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#FAFAFA"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/button_shape"
            android:text="Make an entry" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>




        <Button
            android:id="@+id/listViewButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#F3E5F5"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/button_shape"
            android:text="View Individual Records" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <Button
            android:id="@+id/summaryButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#6A1B9A"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/button_shape"
            android:text="View Summary" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>



<!--        <Spinner-->
<!--            android:id="@+id/summaryButton_spinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

        <Button
            android:id="@+id/logout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#4A148C"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/button_shape"
            android:text="Switch User" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wild 4 - CST8334"
            android:background="@drawable/button_shape"
            android:textColor="#6A1B9A"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algonquin College 2020"
            android:background="@drawable/button_shape"
            android:textColor="#6A1B9A"
            android:textSize="20dp"/>


    </LinearLayout>


</ScrollView>