<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/activity_main_backgroud"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="First Name" />



        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/textViewFirstName"
            android:textSize="18dp"
            android:textColor = "#FEF9E7"
            android:gravity="center"
            android:focusable="true"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewLastName"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewFirstName"
            android:text="Last Name" />

        <EditText
            android:id="@+id/editLastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/editFirstName"
            android:layout_toEndOf="@id/textViewLastName"
            android:textSize="18dp"
            android:gravity="center"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/textViewLastName"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Phone Number" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/editLastName"
            android:layout_toEndOf="@id/textViewPhoneNumber"
            android:textSize="18dp"
            android:gravity="center"
            android:hint="Phone Number"
            android:inputType="textPersonName" />
    </RelativeLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Patient" />

</LinearLayout>